@model PQS.UI_Api.Models.Home.IndexViewModel
@{
    ViewBag.Title = "Index";
}
<div class="row">
    <div class="col-lg-8 offset-lg-2">
        @foreach (var quote in Model.Quotes)
        {
        <!--Card-->
            <div class="card">

                <!--Card image-->
                <img class="img-fluid" src="https://mdbootstrap.com/img/Photos/Horizontal/Nature/4-col/img%20%282%29.jpg" alt="Card image cap">
                <!--/.Card image-->
                <!--Card content-->
                <div class="card-block">
                    <!--Title-->
                    <h4 class="card-title">@quote.NAME</h4>
                    <!--Text-->
                    <p class="card-text">@quote.CAPTION.Substring(0, 75) ...</p>
                <a href="#" class="btn btn-primary">Button</a>
            </div>
            <!--/.Card content-->

        </div>
        <!--/.Card-->
        }

    </div>

</div>
